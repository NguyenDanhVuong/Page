<Page
    x:Class="ASM.Views.SongForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/4452318-music-wallpapers.jpg"/>
    </Page.Background>
    <ScrollViewer HorizontalAlignment="Center" Width="350">
        <StackPanel x:ConnectionId='2' HorizontalAlignment="Center" x:Name="ParentStackPanel" Margin="10, 0, 0, 20">
            <RelativePanel HorizontalAlignment="Center">
                <TextBlock x:ConnectionId='11' x:Name="Header" FontSize="40" Foreground="White" FontWeight="Bold" Text="Add Song"></TextBlock>
                <TextBlock x:ConnectionId='12' RelativePanel.Below="Header" x:Name="error_Info" Foreground="Red"/>
            </RelativePanel>
            <StackPanel>
                <TextBlock Text="Name" Foreground="White" Margin="0, 15, 0, 5"></TextBlock>
                <TextBox x:ConnectionId='10' x:Name="Name" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Decription" Foreground="White" Margin="0, 15, 0, 5"/>
                <TextBox x:ConnectionId='9' AcceptsReturn="True" x:Name="Description" VerticalAlignment="Top" Width="293"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Singer" Foreground="White" Margin="0, 15, 0, 5"/>
                <TextBox x:ConnectionId='8' x:Name="Singer" Text="" VerticalAlignment="Top" Width="293"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Author" Foreground="White" Margin="0, 15, 0, 5"/>
                <TextBox x:ConnectionId='7' x:Name="Author" Text="" VerticalAlignment="Top" Width="293"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Link" Foreground="White" Margin="0, 15, 0, 5"/>
                <TextBox x:ConnectionId='6' x:Name="Link" Text="" VerticalAlignment="Top" Width="293"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Thumbnail" Foreground="White" Margin="0, 15, 0, 5"/>
                <TextBox x:ConnectionId='5' x:Name="Thumbnail" Text="" VerticalAlignment="Top" Width="293"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:ConnectionId='3' x:Name="BtnSignup" Margin="0, 30, 20, 0" Content="Upload"                Foreground="White" BorderBrush="White"/>
                <Button x:ConnectionId='4' x:Name="BtnReset" Margin="5, 30, 0, 0" Content="Reset" Foreground="White" BorderBrush="White"                          />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

